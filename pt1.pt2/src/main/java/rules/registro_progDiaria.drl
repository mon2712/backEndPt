rule "Evaluacion buena"
    salience 2
	dialect "java"
    when
       registroObject: Registro((numTriangulo  + numFlecha)<=4)
       Registro(numCien >=4)
       //Registro((numOchenta + numNoventa + numSetenta)>=2)
    then 
    	registroObject.setEvaluacion("Buena");
end
rule "Evaluacion excelente"
	salience 3
	dialect "java"
    when
       registroObject: Registro(numNoventa <=4)
       Registro(numCien >=6)
       Registro(numTriangulo ==0)
       Registro(numOchenta ==0)
       Registro(numSetenta ==0)
       Registro(numFlecha ==0)
    then 
       registroObject.setEvaluacion("Excelente");
end
